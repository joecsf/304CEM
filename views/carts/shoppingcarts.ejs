<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Shopping cart</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body class="container" style="margin-top: 50px;">

    <% if (messages.error) { %>
	<div class="alert alert-danger" role="alert"><%- messages.error %></div>
	<% } %>
	<% if (messages.success) { %>
	<div class="alert alert-success" role="alert"><%- messages.success %></div>
	<% } %>
	
	<div class="card"> 
        <div class="card-header">
            <ul class="nav nav-pills w-100">
                <li class="nav-pill active">
                    <a class="nav-link"><%- session.username %>, you have ordered below items </a>
                </li>
                <li class="nav-pill ml-auto">
                    <a class="nav-link active" href="/carts/logout">Logout</a>
                </li>
            </ul>
        </div>
    <div class="card-body">
        
        <% if(data.length) { %>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Product Name</th>
                    <th scope="col">Ordered</th>
					<th scope="col">Price</th>
					<th scope="col">Description</th>
                    <th width="200px">Action</th>
                </tr>
            </thead>
            <tbody>
           <% for(var i = 0; i< data.length; i++) { %>
                <tr>
                    <th scope="row"><%= (i+1) %></th>
                    <td><%= data[i].goodname%></td>
                    <td><%= data[i].ordernumber%></td>
					<td><%= data[i].price%></td>
					<td><%= data[i].description%></td>
                    <td>
                        <a class="btn btn-success deletecart" href="deletecart/<%=data[i].goodid%>">Delete</a>
					    <!--   <a class="btn btn-danger delete" onclick="return alert('Are You sure?')" href="../products/delete/<%=data[i].goodid%>">Delete</a>       -->                 
                    </td>
                </tr>
            <% } %>
            </tbody>
        </table>
        <% } %>
        
        <!-- if result is empty -->
        <% if(!data.length) { %>
            <p class="text-center">No product found!</p>
        <% } %>

        </div>
    </div>
	
  </div>

</body>
</html>
